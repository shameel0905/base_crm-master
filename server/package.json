{
  "name": "base-crm-server",
  "version": "1.0.0",
  "description": "Backend server for Base CRM with WooCommerce integration",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test:connection": "node utils/test-woocommerce-connection.js",
    "test:shopify": "node utils/test-shopify-connection.js",
    "test:shopify-diagnostic": "node utils/shopify-diagnostic.js",
    "export:woocommerce": "node api-scripts/export_woocommerce.js",
    "export:shopify": "node api-scripts/export_shopify.js",
    "export:all": "npm run export:woocommerce && npm run export:shopify",
    "sync:woocommerce": "node api-scripts/sync_woocommerce.js",
    "sync:shopify": "node api-scripts/sync_shopify.js"
  },
  "keywords": [
    "crm",
    "woocommerce",
    "api",
    "backend",
    "node",
    "express"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@shopify/shopify-api": "^12.1.2",
    "@woocommerce/woocommerce-rest-api": "^1.0.2",
    "axios": "^1.13.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.18.2",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  }
}
